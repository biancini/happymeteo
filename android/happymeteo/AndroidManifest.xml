<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.happymeteo"
    android:versionCode="1"
    android:versionName="1.0">

    <!-- GCM requires Android SDK version 2.2 (API level 8) or above. -->
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8" />

    <!-- GCM connects to Internet Services. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- GCM requires a Google account. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Creates a custom permission so only this app can receive its messages. (DEVONO ESSERE package.permission per forza)-->
    <permission
        android:name="com.happymeteo.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.happymeteo.permission.C2D_MESSAGE" />

    <!-- This app has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!-- Network State Permissions to detect Internet status -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permission to vibrate -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- Permission to access a geolocation -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" /> 
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> 

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="com.happymeteo.HappyMeteoApplication">

        <!-- Activities -->
        <activity
            android:name="com.happymeteo.IndexActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"> 
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.happymeteo.LoadingActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.happymeteo.MenuActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name" />
        <activity
            android:name="com.happymeteo.CreateAccountActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.happymeteo.NormalLoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.happymeteo.InformationPageActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.happymeteo.HappyMeteoActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.happymeteo.HappyContextActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.happymeteo.HappyMapActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.happymeteo.QuestionBeginActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.happymeteo.ChallengeActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.happymeteo.FriendsFacebookActivity"
            android:label="@string/app_name" />

        <!-- GCM Service -->
        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <!-- DEVE ESSERE il package scritto in cima per forza -->
                <category android:name="com.happymeteo" />
            </intent-filter>
        </receiver>

        <!-- DEVE ESSERE nello stesso package delle classi che lo usano, meglio se in quello specificato nell'AndroidManifest.xml -->
        <service android:name="com.happymeteo.GCMIntentService" />
    </application>

</manifest>