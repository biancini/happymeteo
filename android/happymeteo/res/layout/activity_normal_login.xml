<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65" >

        <ImageView
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:src="@drawable/login_logo"
            android:contentDescription="@string/fake" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:adjustViewBounds="true"
            android:src="@drawable/login_icon"
            android:contentDescription="@string/fake" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/normal_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:ems="10"
            android:hint="@string/insert_email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/normal_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:ems="10"
            android:hint="@string/insert_password"
            android:inputType="textPassword" />
        
        <com.happymeteo.widget.AppyMeteoButton
            android:id="@+id/btnGoNormalLogin"
   			android:layout_width="237dip"
            android:layout_height="35dip"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dip"
   			android:contentDescription="@string/btn_login"
   			app:dark="false" />
        
        <com.happymeteo.widget.AppyMeteoButton
            android:id="@+id/btnLostPassword"
   			android:layout_width="237dip"
            android:layout_height="35dip"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dip"
   			android:contentDescription="@string/btn_pwddimenticata"
   			app:dark="false" />

    </LinearLayout>

</LinearLayout>