<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_resoconto_sfida"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:src="@drawable/sfida3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dip"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dip" >

        <com.facebook.widget.ProfilePictureView
            android:id="@+id/adversaryPic"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:src="@drawable/com_facebook_profile_default_icon" />
        
        <TextView
            android:id="@+id/adversaryName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp" />

        <Button
            android:id="@+id/btnAcceptChallenge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/accetta" />

        <Button
            android:id="@+id/btnRefuseChallenge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rifiuta" />
    </LinearLayout>

</LinearLayout>