<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_resoconto_sfida"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:src="@drawable/appygame_gioco" />

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dip" >

        <com.facebook.widget.ProfilePictureView
            android:id="@+id/ioPic"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/com_facebook_profile_default_icon" />

        <View
            android:layout_width="1dp"
            android:layout_height="50dip"
            android:layout_margin="10dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/ioName"
            android:layout_width="0dip"
            android:layout_weight="1.0"
            android:layout_height="wrap_content" 
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/ioChallenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp" 
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dip" >

        <com.facebook.widget.ProfilePictureView
            android:id="@+id/tuPic"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/com_facebook_profile_default_icon" />

        <View
            android:layout_width="1dp"
            android:layout_height="50dip"
            android:layout_margin="10dp"
            android:background="@android:color/black" />

        <TextView
            android:id="@+id/tuName"
            android:layout_width="0dip"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tuChallenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp" 
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_margin="10dp" 
        android:background="@drawable/risultato"/>

</LinearLayout>