<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <ImageView
        android:layout_width="200dip"
        android:layout_height="206dip"
        android:adjustViewBounds="true"
        android:src="@drawable/logo_nuova_sfida" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/facebookPickerListTitleWithApp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="20dip"
            android:text="@string/titleWithApp" />

        <ListView
            android:id="@+id/facebookPickerListViewWithApp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#FFFFFF"
            android:divider="@drawable/com_facebook_list_divider"
            android:fastScrollEnabled="true"
            android:listSelector="@drawable/com_facebook_picker_list_selector"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/facebookPickerListTitleNoApp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="20dip"
            android:text="@string/titleNoApp" />

        <ListView
            android:id="@+id/facebookPickerListViewNoApp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#FFFFFF"
            android:divider="@drawable/com_facebook_list_divider"
            android:fastScrollEnabled="true"
            android:listSelector="@drawable/com_facebook_picker_list_selector"
            android:scrollbars="vertical" />
    </LinearLayout>

</LinearLayout>